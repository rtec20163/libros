<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>registrar</from-outcome>
            <to-view-id>/registrar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>inicio</from-outcome>
            <to-view-id>/inicio.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>recuperarcontrasenha</from-outcome>
            <to-view-id>/recuperarContrasenha.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/registrar.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/inicio.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>publicar</from-outcome>
            <to-view-id>/publicar.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>mispublicaciones</from-outcome>
            <to-view-id>/misPublicaciones.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>verpublicaciones</from-outcome>
            <to-view-id>/verPublicaciones.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/recuperarContrasenha.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>recuperarcontrasenha</from-outcome>
            <to-view-id>/recuperarContrasenha.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/publicar.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>inicio</from-outcome>
            <to-view-id>/inicio.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>publicar</from-outcome>
            <to-view-id>/publicar.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/misPublicaciones.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>inicio</from-outcome>
            <to-view-id>/inicio.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/verPublicaciones.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>inicio</from-outcome>
            <to-view-id>/inicio.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
