<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>registrar</from-outcome>
            <to-view-id>/registrar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>inicio</from-outcome>
            <to-view-id>/inicio.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>recuperarpass</from-outcome>
            <to-view-id>/recuperarPass.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/registrar.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>registrar</from-outcome>
            <to-view-id>/registrar.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/inicio.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>publicarlibro</from-outcome>
            <to-view-id>/publicarLibro.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>libro</from-outcome>
            <to-view-id>/libro.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/recuperarPass.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>recuperarpass</from-outcome>
            <to-view-id>/recuperarPass.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/publicarLibro.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>inicio</from-outcome>
            <to-view-id>/inicio.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>publicarlibro</from-outcome>
            <to-view-id>/publicarLibro.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/libro.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>libro</from-outcome>
            <to-view-id>/libro.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>inicio</from-outcome>
            <to-view-id>/inicio.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
